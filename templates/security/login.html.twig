{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block content %}

<form method="post" action="{{ path('app_login') }}">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous etes connecté {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecté</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" required >
    <label for="inputPassword">Password</label>
    <input type="password" name="_password" id="inputPassword" class="form-control" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

<div class="mt-5">
    <button class="btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
</div>
</form>
{% endblock %}
